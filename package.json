{
  "name": "vue-notify",
  "author": "Freedom Evenden <f3ve>",
  "description": "Vue Notify Monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "version": "lerna version",
    "use-notify": "pnpm --filter @f3ve/use-notify",
    "frontend": "pnpm --filter frontend",
    "request": "pnpm -F @f3ve/use-notify-request",
    "notify": "pnpm -F @vue-notify/notify",
    "composables": "pnpm -F @usenotify/composables",
    "components": "pnpm -F @vue-notify/components"
  },
  "lint-staged": {
    "**/**": "prettier --write --ignore-unknown",
    "*.{cjs,js,ts}": "eslint --fix"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@commitlint/types": "^19.0.3",
    "@f3ve/eslint-config": "^1.0.6",
    "@lerna-lite/cli": "^3.3.1",
    "@lerna-lite/publish": "^3.3.1",
    "@lerna-lite/version": "^3.3.1",
    "@types/node": "^20.11.25",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  },
  "script": {
    "request": "pnpm -F @f3ve/use-notify-request"
  }
}
